<%= form_with model: [:admins, @sector, @site], local: true do |f| %>
  <div id="error_messages">
    <%= render "admins/shared/form_errors_messages", errors: @site.errors %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,  class: "form-control" %>
  <div >

  <div class="form-group">
    <%= f.label :opening_time %>
    <%= f.time_field :opening_time,  class: "form-control" %>
  <div >

  <div class="form-group">
    <%= f.label :description %>
    <%= f.rich_text_area :description,  class: "form-control" %>
  <div >

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number,  class: "form-control" %>
  <div >

  <div class="form-group">
    <%= f.label :website %>
    <%= f.text_field :website,  class: "form-control" %>
  <div >

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, f.object.class.categories.collect { |k, _| [t("activerecord.attributes.site.category_name.#{k}"), k] }, class: "form-control" %>
  </div>

  <%= f.fields_for :address do |address_field| %>
    <div class="form-group">
      <%= address_field.label :street %>
      <%= address_field.text_field :street,  class: "form-control" %>
    <div >
    <div class="form-group">
      <%= address_field.label :postal_code %>
      <%= address_field.text_field :postal_code,  class: "form-control" %>
    <div >
    <div class="form-group">
      <%= address_field.label :city %>
      <%= address_field.text_field :city,  class: "form-control" %>
    <div >
  <% end %>

  <div  class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture  %>
  </div>

